<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>bin</id>
  <formats>
    <!-- tar.gz &| tar.bz2 &| zip -->
    <format>tar.gz</format>
    <!-- format>zip</format-->
  </formats>
  <baseDirectory>easy-repo-tools</baseDirectory>
  <fileSets>
    <fileSet>
        <!-- keep - unix - lf - dos - crlf -->
      <lineEnding>unix</lineEnding>
      <includes>
        <include>cfg/**/*.*</include>
        <include>logs/log4j</include>
        <include>bin/**/*.*</include>
      </includes>
      <fileMode>751</fileMode>
      <directoryMode>751</directoryMode>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
        <outputDirectory>lib</outputDirectory>
        <excludes>
            <exclude>nl.knaw.dans.easy:tools-easy-repo-tools</exclude>
        </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
