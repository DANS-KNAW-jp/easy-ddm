<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">
	
	<import resource="app/include-all-context.xml"/>
	
	<bean name="rl" class="nl.knaw.dans.common.lang.log.RL">
		<constructor-arg index="0" value="${rl.reportdir}/" />
		<constructor-arg index="1" value="${rl.allreadwrite}" />
		<constructor-arg index="2" value="${rl.timebaseddirectory}" />
		<property name="reporter" ref="reporter" />
	</bean>
	
	<bean name="reporter" class="nl.knaw.dans.easy.tools.TaskRunnerReporter" destroy-method="close">
		<constructor-arg ref="taskRunner"/>
		<property name="reports">
			<list>
				<bean name="globalReport" class="nl.knaw.dans.common.lang.log.EventNameOverviewReport"/>
				<bean class="nl.knaw.dans.common.lang.log.EventNameOverviewReport">
					<constructor-arg value="excel2EasyMetadataXML"/>
				</bean>
				
				<bean name="errorOverviewReport" class="nl.knaw.dans.common.lang.log.ErrorOverviewReport"/>
				<bean name="overviewReport" class="nl.knaw.dans.common.lang.log.OverviewReport"/>
				<bean name="loggerReport" class="nl.knaw.dans.common.lang.log.LoggerReport"/>
			</list>
		</property>
	</bean>
	
	<bean name="taskRunner" class="nl.knaw.dans.easy.tools.TaskRunner">
		<property name="tasks">
			<list>
				<bean name="excel2EasyMetadataXML" class="nl.knaw.dans.easy.tools.task.Excel2EasyMetadataXMLTask">
					<property name="excelFilePath" value="/mnt/hgfs/vm-data/SVN/easy/branches/2.0/easy/easy-tools/easy-repo-tools/src/test/resources/test-files/" />
					<!-- property name="excelFileName" value="example-import-excel-all-archaeology-fields.xls" /-->
					<property name="excelFileName" value="metadata.xls" />
					<property name="originalFilesFolder" value="/mnt/hgfs/vm-data/SVN/easy/branches/2.0/easy/easy-tools/easy-repo-tools/src/test/resources/test-files/original/" />
					<property name="outputFolder" value="/mnt/hgfs/vm-data/SVN/easy/branches/2.0/easy/easy-tools/easy-repo-tools/src/test/resources/test-files/excel-output/" />
					<!-- Choose Format:  ARCHAEOLOGY, HISTORY or SOCIOLOGY-->
					<property name="formatSelection" value="ARCHAEOLOGY" />
					<property name="depositorId" value="res"/>
					<property name="archivistId" value="migration"/>
					<property name="datasetState" value="SUBMITTED"/>
				</bean>
			</list>
		</property>
	</bean>

</beans>