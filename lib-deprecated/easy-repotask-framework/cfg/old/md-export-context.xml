<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">

	<import resource="app/application-context.xml" />
	<import resource="app/store-context.xml" />
	
	<bean name="taskRunner" class="nl.knaw.dans.easy.tools.TaskRunner">
		<property name="tasks">
			<list>
				<bean class="nl.knaw.dans.easy.tools.task.mdexport.CreateOutputDirTask">
					<property name="dir" value="${md-export.targetdir}" />
					<property name="overwrite" value="${md-export.overwrite}" />
				</bean>
				<ref bean="datasetTaskController" />
			</list>
		</property>
	</bean>

	<bean name="datasetTaskController" class="nl.knaw.dans.easy.tools.dataset.DatasetTaskController">
		<property name="tasks">
			<list>
				<bean class="nl.knaw.dans.easy.tools.task.mdexport.CreatePrintWriterForDatasetOutputTask" >
					<property name="dir" value="${md-export.targetdir}" />
					<property name="useAipIdAsFileName" value="${md-export.use-aipid-as-filename}" />
					<property name="printWriterName" value="output" />
					<property name="fileName" value="outputFile" />
				</bean>
				<bean class="nl.knaw.dans.easy.tools.task.mdexport.EasyMetadataPrinterTask" >
					<property name="printWriterName" value="output" />
				</bean>
				<bean class="nl.knaw.dans.easy.tools.task.mdexport.AdministrativeMetadataPrinterTask" >
					<property name="printWriterName" value="output" />
				</bean>
				<bean class="nl.knaw.dans.easy.tools.task.mdexport.DatasetFilesGetterTask" >
					<property name="filesListName" value="files" />
				</bean>
				<!-- bean class="nl.knaw.dans.easy.tools.task.mdexport.DatasetFilesMetadataPrinterTask" />
				<bean class="nl.knaw.dans.easy.tools.task.mdexport.DatasetFilesHashesPrinterTask" />
				<bean class="nl.knaw.dans.easy.tools.task.mdexport.DatasetFilesDescriptiveMetadataPrinterTask" /-->
				<bean class="nl.knaw.dans.easy.tools.task.mdexport.PrintStreamCloserTask" >
					<property name="printWriterName" value="output" />
				</bean>
				<bean class="nl.knaw.dans.easy.tools.task.mdexport.TextFileLineSorterTask" >
					<property name="fileName" value="outputFile" />
				</bean>
			</list>
		</property>
	</bean>
</beans>