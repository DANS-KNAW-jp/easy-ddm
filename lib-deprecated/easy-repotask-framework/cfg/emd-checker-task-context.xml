<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">

	<import resource="app/include-all-context.xml" />

	<!-- https://drivenbydata.onjira.com/browse/EASY-98 -->

	<bean name="rl" class="nl.knaw.dans.common.lang.log.RL">
		<constructor-arg index="0" value="${rl.reportdir}/" />
	</bean>

	<bean name="taskRunner" class="nl.knaw.dans.easy.tools.TaskRunner">
		<property name="tasks">
			<list>
				<ref bean="datasetTaskController" />
			</list>
		</property>
	</bean>

	<bean name="datasetTaskController" class="nl.knaw.dans.easy.tools.dataset.DatasetTaskController">
		<constructor-arg>
			<list>
				<bean name="datasetLoggingFilter"
					class="nl.knaw.dans.easy.tools.task.am.dataset.DatasetLoggingFilter" />
				<ref bean="stateFilter" />
			</list>
		</constructor-arg>
		<property name="tasks">
			<list>
				<bean class="nl.knaw.dans.easy.tools.task.RelatedLinkCheckerTask" />
				<bean class="nl.knaw.dans.easy.tools.task.MissingAudienceTask" />
				<bean class="nl.knaw.dans.easy.tools.task.SwitchedKeyValueTask">
					<constructor-arg value="DCMI"/>
					<constructor-arg value="common.dc.type"/>
				</bean>
				<!-- <bean class="nl.knaw.dans.easy.tools.task.am.dataset.SaveDatasetTask"/> -->
			</list>
		</property>
	</bean>

	<bean name="stateFilter"
		class="nl.knaw.dans.easy.tools.task.am.dataset.DatasetStateFilter">
		<constructor-arg>
			<list>
				<value>PUBLISHED</value>
				<value>MAINTENANCE</value>
				<value>SUBMITTED</value>
			</list>
		</constructor-arg>
	</bean>
</beans>