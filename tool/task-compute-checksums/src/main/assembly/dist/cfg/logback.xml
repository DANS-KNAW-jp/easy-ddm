<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
			by default -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>log/task.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>log/task.%d{yyyy-MM-dd}.log</fileNamePattern>
			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n
			</pattern>
		</encoder>
	</appender>
	<appender name="CHECKSUMS" class="ch.qos.logback.core.FileAppender">
		<file>log/checksums.log</file><encoder><pattern>%msg%n</pattern></encoder>
	</appender>
	<appender name="STREAM_IDS" class="ch.qos.logback.core.FileAppender">
		<file>log/stream-ids.log</file><encoder><pattern>%msg%n</pattern></encoder>
	</appender>
	<appender name="CALC_FILE_OBJ_IDS" class="ch.qos.logback.core.FileAppender">
		<file>log/done-calc-file-obj-ids.log</file><encoder><pattern>%msg%n</pattern></encoder>
	</appender>
	<appender name="SET_FILE_OBJ_IDS" class="ch.qos.logback.core.FileAppender">
		<file>log/done-set-file-obj-ids.log</file><encoder><pattern>%msg%n</pattern></encoder>
	</appender>
	<appender name="VERIFIED_OBJ_IDS" class="ch.qos.logback.core.FileAppender">
		<file>log/done-verify-obj-ids.log</file><encoder><pattern>%msg%n</pattern></encoder>
	</appender>
	<appender name="SET_OTHER_OBJ_IDS" class="ch.qos.logback.core.FileAppender">
		<file>log/done-set-other-obj-ids.log</file><encoder><pattern>%msg%n</pattern></encoder>
	</appender>
	
	<root level="warn">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>
	<logger name="nl.knaw.dans" level="info" />
	<logger name="checksums" level="info">
		<appender-ref ref="CHECKSUMS" />
	</logger>
	<logger name="stream-ids" level="info">
		<appender-ref ref="STREAM_IDS" />
	</logger>
	<logger name="done-calc-file-obj-ids" level="info">
		<appender-ref ref="CALC_FILE_OBJ_IDS" />
	</logger>
	<logger name="done-set-file-obj-ids" level="info">
		<appender-ref ref="SET_FILE_OBJ_IDS" />
	</logger>
	<logger name="done-verify-obj-ids" level="info">
		<appender-ref ref="VERIFIED_OBJ_IDS" />
	</logger>
	<logger name="done-set-other-obj-ids" level="info">
		<appender-ref ref="SET_OTHER_OBJ_IDS" />
	</logger>
</configuration>
