<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
			by default -->
		<encoder><pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern></encoder>
	</appender>
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>log/task.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>../log/task.%d{yyyy-MM-dd}.log</fileNamePattern>
			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder><pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern></encoder>
	</appender>
	<appender name="PIDS" class="ch.qos.logback.core.FileAppender">
		<file>log/pids.log</file>
		<encoder><pattern>%msg%n</pattern></encoder>
	</appender>
	<root level="warn">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>
	<logger name="nl.knaw.dans" level="info" />
	<logger name="UpdatedPids" level="info" >
		<appender-ref ref="PIDS" />
	</logger>
</configuration>
