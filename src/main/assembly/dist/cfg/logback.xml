<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="5 seconds">

	<!-- For ANSI Eclipse console see http://www.mihai-nita.net/eclipse/ -->
	<appender name="COLOR_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<Pattern>%highlight(%-5level [%thread]: %msg) %n</Pattern>
		</encoder>
	</appender>

	<appender name="STATISTICS_ROLLING_FILE_LOG"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/var/log/easy-webui/statistics.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>statistics.%d{yyyy-MM-dd}.log</fileNamePattern>

			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>
		</rollingPolicy>

		<encoder>
			<pattern>%d - %m%n</pattern>
		</encoder>
	</appender>

	<appender name="SERVICE_PROFILING__ROLLING_FILE_LOG"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/var/log/easy-webui/service-profiling.csv</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>service-profiling.%d{yyyy-MM-dd}.csv
			</fileNamePattern>

			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>
		</rollingPolicy>

		<encoder>
			<pattern>%d - %m%n</pattern>
		</encoder>
	</appender>

	<appender name="EASY_LOG"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/var/log/easy-webui/easy.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>statistics.%d{yyyy-MM-dd}.log</fileNamePattern>

			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%p %d [%t] - %m%n</pattern>
		</encoder>
	</appender>

	<appender name="EASY_ERROR_LOG"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
		<file>/var/log/easy-webui/easy.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>statistics.%d{yyyy-MM-dd}.log</fileNamePattern>

			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%p %d [%t] - %m%n</pattern>
		</encoder>
	</appender>



	<root level="off">
		<appender-ref ref="COLOR_CONSOLE" />
	</root>

	<logger name="nl.knaw.dans" level="info">
		<appender-ref ref="COLOR_CONSOLE" />
		<appender-ref ref="EASY_LOG" />
	</logger>

	<logger name="nl.knaw.dans.easy.business.aspect.ServiceProfiling"
		level="info" additiviy="false">
		<appendeer-ref ref="SERVICE_PROFILING__ROLLING_FILE_LOG" />
	</logger>

	<logger name="statistics" level="info">
		<appender-ref ref="STATISTICS_ROLLING_FILE_LOG" />
		<appender-ref ref="COLOR_CONSOLE" />
	</logger>

</configuration>