<?xml version="1.0" encoding="UTF-8"?>
<binding>

	<include path="BasicString-binding.xml" />
	<include path="Author-binding.xml" />

	<mapping class="nl.knaw.dans.easy.domain.model.emd.EmdCreator"
		ns="http://easy.dans.knaw.nl/easy/easymetadata/" abstract="true">

		<namespace uri="http://easy.dans.knaw.nl/easy/easymetadata/" prefix="emd" />
		<namespace uri="http://purl.org/dc/elements/1.1/" prefix="dc" />
		<namespace uri="http://easy.dans.knaw.nl/easy/easymetadata/eas/" prefix="eas" />

		<collection field="dcCreator" factory="nl.knaw.dans.easy.domain.model.emd.types.ListFactory.basicStringList">
			<structure ns="http://purl.org/dc/elements/1.1/" name="creator"
				type="nl.knaw.dans.easy.domain.model.emd.types.BasicString" usage="optional"/>
		</collection>

		<collection field="easCreator" factory="nl.knaw.dans.easy.domain.model.emd.types.ListFactory.authorList">
			<structure ns="http://easy.dans.knaw.nl/easy/easymetadata/eas/" name="creator"
				type="nl.knaw.dans.easy.domain.model.emd.types.Author" usage="optional"/>
		</collection>

	</mapping>

</binding>