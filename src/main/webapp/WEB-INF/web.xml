<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <display-name>Easy SWORD Demo Server</display-name>

  <!-- Configuration Information -->

  <context-param>
    <param-name>sword-server-class</param-name>
    <param-value>nl.knaw.dans.easy.sword.EasySwordServer</param-value>
    <description>
      The SWORDServer class name
    </description>
  </context-param>
  
  <context-param>
    <param-name>authentication-method</param-name>
    <param-value>Basic</param-value>
    <description>
      The type of authentication used : [Basic|None]
    </description>
  </context-param>

  <context-param>
    <param-name>maxUploadSize</param-name>
    <param-value>2048</param-value>
    <description>
      The maximum upload size in kB. Setting this value to -1 will allow any size upload
      (subject to the limits placed by your servlet container). 
    </description>
  </context-param>

  <context-param>
    <param-name>client-urls</param-name>
    <param-value>http://client.swordapp.org/client/servicedocument,http://dspace.swordapp.org/sword/servicedocument,http://sword.eprints.org/sword-app/servicedocument,http://sword.intralibrary.com/IntraLibrary-Deposit/service,http://fedora.swordapp.org/sword-fedora/servicedocument</param-value>
    <description>
      URLs for the client to connect to
    </description>
  </context-param>
  
  <context-param>
    <param-name>proxy-host</param-name>
    <param-value></param-value>
  </context-param>
  
  <context-param>
    <param-name>proxy-port</param-name>
    <param-value></param-value>
  </context-param>  
  
  <context-param>
    <param-name>deposit-url</param-name>
    <param-value>http://localhost:8083/client/</param-value>
  </context-param>  

  
  <!-- Servlets -->

  <servlet>
    <servlet-name>servicedocument</servlet-name>
    <servlet-class>org.purl.sword.server.ServiceDocumentServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>deposit</servlet-name>
    <servlet-class>org.purl.sword.server.DepositServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>client</servlet-name>
    <servlet-class>org.purl.sword.client.ServletClient</servlet-class>
  </servlet>


  <!-- Servlet Mappings -->

  <servlet-mapping>
    <servlet-name>servicedocument</servlet-name>
    <url-pattern>/servicedocument</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>deposit</servlet-name>
    <url-pattern>/deposit/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.css</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>client</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

</web-app>
