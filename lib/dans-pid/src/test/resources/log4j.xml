<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out"/>
		<layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%p %d{HH:mm:ss,SSS} %m [%M] %C.(%F:%L)%n"/>
		</layout>
	</appender>

	<appender name="service.profiling" class="org.apache.log4j.RollingFileAppender">
        <param name="file"              value="logs/easy/service-profiling.csv"/>
        <param name="Append"            value="true" />
        <param name="MaxFileSize"       value="500KB"/>
        <param name="MaxBackupIndex"    value="5"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d;%m%n"/>
        </layout>
    </appender>

	<logger name="nl.knaw.dans">
  		<level value="debug"/>
	</logger>

	<root>
	  <priority value="info" />
   	  <appender-ref ref="stdout" />
	</root>


</log4j:configuration>
