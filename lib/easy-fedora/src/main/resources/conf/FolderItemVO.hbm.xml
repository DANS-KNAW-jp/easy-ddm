<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="nl.knaw.dans.easy.domain.dataset.item.FolderItemVO" table="easy_folders" schema="public">
        <cache usage="read-write" />
        <id name="sid" type="string">
            <column name="pid" length="64" />
            <generator class="assigned" />
        </id>
        <property name="parentSid" type="string">
            <column name="parent_sid" length="64" not-null="true" />
        </property>
        <property name="datasetSid" type="string">
            <column name="dataset_sid" length="64" not-null="true" />
        </property>
        <property name="path" type="string">
            <column name="path" length="256" not-null="true" />
        </property>
        <property name="name" type="string">
            <column name="name" length="256" not-null="true" />
        </property>
        <set name="creatorRoles" inverse="true" lazy="true" fetch="subselect" >
            <key on-delete="noaction">
                <column name="pid" length="64" not-null="true" />
            </key>
            <one-to-many class="nl.knaw.dans.easy.domain.dataset.item.FolderItemCreatorRole" />
        </set>
        <set name="visibilities" inverse="true" lazy="true" fetch="subselect" >
            <key on-delete="noaction">
                <column name="pid" length="64" not-null="true" />
            </key>
            <one-to-many class="nl.knaw.dans.easy.domain.dataset.item.FolderItemVisibleTo" />
        </set>
        <set name="accessibilities" inverse="true" lazy="true" fetch="subselect" >
            <key on-delete="noaction">
                <column name="pid" length="64" not-null="true" />
            </key>
            <one-to-many class="nl.knaw.dans.easy.domain.dataset.item.FolderItemAccessibleTo" />
        </set>

        <set name="files" inverse="true" lazy="true">
            <key on-delete="cascade">
                <column name="parent_sid" length="64" not-null="true" />
            </key>
            <one-to-many class="nl.knaw.dans.easy.domain.dataset.item.FileItemVO" />
        </set>

        <set name="folders" inverse="true" lazy="true">
            <key on-delete="cascade">
                <column name="parent_sid" length="64" not-null="true" />
            </key>
            <one-to-many class="nl.knaw.dans.easy.domain.dataset.item.FolderItemVO" />
        </set>
    </class>
</hibernate-mapping>
